# {{ ansible_managed }}
# Version: 1.0.0
# Nginx Proxy Configuration for Solr
# Domain: {{ solr_app_domain | default(ansible_fqdn) }}

upstream solr_backend {
    server 127.0.0.1:{{ solr_port }};
    keepalive 32;
}

# HTTP to HTTPS Redirect (wenn SSL aktiviert)
{% if solr_ssl_enabled | default(false) %}
server {
    listen 80;
    listen [::]:80;
    server_name {{ solr_app_domain | default(ansible_fqdn) }};

    # Let's Encrypt ACME Challenge
    location /.well-known/acme-challenge/ {
        root /var/www/html;
        try_files $uri =404;
    }

    # Redirect alle anderen Anfragen zu HTTPS
    location / {
        return 301 https://$server_name$request_uri;
    }
}
{% endif %}

# Main Server Block (HTTPS wenn aktiviert, sonst HTTP)
server {
    {% if solr_ssl_enabled | default(false) %}
    listen 443 ssl http2;
    listen [::]:443 ssl http2;

    # SSL Zertifikate (Let's Encrypt)
    ssl_certificate {{ solr_ssl_cert_path }}/fullchain.pem;
    ssl_certificate_key {{ solr_ssl_cert_path }}/privkey.pem;

    # SSL Konfiguration (Modern)
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers off;

    # SSL Session Cache
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    # OCSP Stapling
    ssl_stapling on;
    ssl_stapling_verify on;
    ssl_trusted_certificate {{ solr_ssl_cert_path }}/chain.pem;
    resolver 8.8.8.8 8.8.4.4 valid=300s;
    resolver_timeout 5s;
    {% else %}
    listen 80;
    listen [::]:80;
    {% endif %}

    server_name {{ solr_app_domain | default(ansible_fqdn) }};

    # Logging
    access_log /var/log/nginx/solr-{{ solr_app_domain | default('default') }}-access.log combined;
    error_log /var/log/nginx/solr-{{ solr_app_domain | default('default') }}-error.log warn;

    # Security Headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    {% if solr_ssl_enabled | default(false) %}
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    {% endif %}

    # Client Body Size Limit (für große Dokumente)
    client_max_body_size 100M;

    # Timeouts
    proxy_connect_timeout 300s;
    proxy_send_timeout 300s;
    proxy_read_timeout 300s;
    send_timeout 300s;

    # Solr Proxy Location
    location {{ solr_proxy_path | default('/solr-admin') }}/ {
        {% if solr_proxy_auth_enabled | default(false) %}
        # Basic Authentication
        auth_basic "Solr Admin Access";
        auth_basic_user_file /etc/nginx/solr.htpasswd;
        {% endif %}

        # IP Access Control (optional)
        {% if solr_restrict_admin | default(true) %}
        allow 127.0.0.1;
        allow ::1;
        {% for ip in solr_admin_allowed_ips | default([]) %}
        allow {{ ip }};
        {% endfor %}
        deny all;
        {% endif %}

        # Proxy Headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;

        # Proxy Pass
        proxy_pass http://solr_backend/solr/;
        proxy_redirect off;

        # WebSocket Support (falls benötigt)
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        # Buffering (für große Antworten)
        proxy_buffering on;
        proxy_buffer_size 4k;
        proxy_buffers 8 4k;
        proxy_busy_buffers_size 8k;
    }

    # Health Check Endpoint (öffentlich)
    location {{ solr_proxy_path | default('/solr-admin') }}/admin/ping {
        proxy_pass http://solr_backend/solr/admin/ping;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        access_log off;
    }

    # Root Location (optional - Redirect zu Admin)
    location = / {
        return 301 {{ solr_proxy_path | default('/solr-admin') }}/;
    }
}
