<?xml version="1.0" encoding="UTF-8" ?>
<schema name="moodle-{{ schema_version | replace('.', '_') }}" version="1.6">

  <!-- FIELD TYPES -->
  <fieldType name="string" class="solr.StrField" sortMissingLast="true" docValues="true"/>
  <fieldType name="boolean" class="solr.BoolField" sortMissingLast="true"/>
  <fieldType name="pint" class="solr.IntPointField" docValues="true"/>
  <fieldType name="plong" class="solr.LongPointField" docValues="true"/>
  <fieldType name="pfloat" class="solr.FloatPointField" docValues="true"/>
  <fieldType name="pdouble" class="solr.DoublePointField" docValues="true"/>
  
  {% if schema_features.use_legacy_date | default(false) %}
  <fieldType name="pdate" class="solr.TrieDateField" docValues="true"/>
  {% else %}
  <fieldType name="pdate" class="solr.DatePointField" docValues="true"/>
  {% endif %}
  
  <!-- Text with max field length for Moodle {{ schema_version }} -->
  <fieldType name="text_general" class="solr.TextField" positionIncrementGap="100" multiValued="true">
    <analyzer type="index">
      <tokenizer class="solr.StandardTokenizerFactory"/>
      <filter class="solr.LowerCaseFilterFactory"/>
      <filter class="solr.StopFilterFactory" ignoreCase="true" words="lang/stopwords.txt"/>
      <filter class="solr.LengthFilterFactory" min="2" max="{{ schema_features.max_field_length | default(32766) }}"/>
      <filter class="solr.WordDelimiterGraphFilterFactory"
              generateWordParts="1"
              generateNumberParts="1"
              catenateWords="1"
              catenateNumbers="1"
              catenateAll="0"
              splitOnCaseChange="1"/>
      <filter class="solr.FlattenGraphFilterFactory"/>
    </analyzer>
    <analyzer type="query">
      <tokenizer class="solr.StandardTokenizerFactory"/>
      <filter class="solr.LowerCaseFilterFactory"/>
      <filter class="solr.StopFilterFactory" ignoreCase="true" words="lang/stopwords.txt"/>
      <filter class="solr.WordDelimiterGraphFilterFactory"
              generateWordParts="1"
              generateNumberParts="1"
              catenateWords="0"
              catenateNumbers="0"
              catenateAll="0"
              splitOnCaseChange="1"/>
    </analyzer>
  </fieldType>

  <!-- MOODLE CORE FIELDS (All versions) -->
  <field name="id" type="string" indexed="true" stored="true" required="true" multiValued="false"/>
  <field name="title" type="text_general" indexed="true" stored="true"/>
  <field name="content" type="text_general" indexed="true" stored="true"/>
  <field name="description" type="text_general" indexed="true" stored="true"/>
  <field name="contextid" type="pint" indexed="true" stored="true" required="true"/>
  <field name="courseid" type="pint" indexed="true" stored="true" required="true"/>
  <field name="owneruserid" type="pint" indexed="true" stored="true" required="true"/>
  <field name="modified" type="pdate" indexed="true" stored="true" required="true"/>
  <field name="type" type="string" indexed="true" stored="true" required="true"/>
  <field name="areaid" type="string" indexed="true" stored="true" required="true"/>
  <field name="itemid" type="pint" indexed="true" stored="true" required="true"/>
  
  <!-- Optional fields (all versions) -->
  <field name="userid" type="pint" indexed="true" stored="true"/>
  <field name="groupid" type="pint" indexed="true" stored="true"/>
  <field name="parentid" type="string" indexed="true" stored="true"/>
  <field name="username" type="text_general" indexed="true" stored="true"/>
  <field name="categoryid" type="pint" indexed="true" stored="true"/>
  <field name="modname" type="string" indexed="true" stored="true"/>
  
  <!-- File handling -->
  <field name="solr_fileid" type="string" indexed="true" stored="true"/>
  <field name="filetext" type="text_general" indexed="true" stored="false"/>
  
  {% if schema_version | float >= 4.1 %}
  <!-- Moodle 4.1+ specific fields -->
  <field name="intro" type="text_general" indexed="true" stored="true"/>
  <field name="docurl" type="string" indexed="false" stored="true"/>
  {% endif %}
  
  {% if schema_version | float >= 4.3 %}
  <!-- Moodle 4.3+ specific fields -->
  <field name="coursecategory" type="string" indexed="true" stored="true"/>
  {% endif %}
  
  {% if schema_version | float >= 4.4 %}
  <!-- Moodle 4.4+ specific fields -->
  <field name="activitycompletionstate" type="pint" indexed="true" stored="true"/>
  {% endif %}
  
  {% if schema_version | float >= 5.0 %}
  <!-- Moodle 5.0+ specific fields -->
  <field name="competencies" type="text_general" indexed="true" stored="false" multiValued="true"/>
  <field name="outcomes" type="text_general" indexed="true" stored="false" multiValued="true"/>
  <field name="tags" type="string" indexed="true" stored="true" multiValued="true"/>
  {% endif %}
  
  {% if schema_features.additional_fields is defined %}
  <!-- Custom additional fields for this version -->
  {% for field in schema_features.additional_fields %}
  <field name="{{ field.name }}" type="{{ field.type }}" indexed="{{ field.indexed | default(true) }}" stored="{{ field.stored | default(true) }}" multiValued="{{ field.multiValued | default(false) }}"/>
  {% endfor %}
  {% endif %}
  
  <!-- System fields -->
  <field name="_version_" type="plong" indexed="false" stored="false"/>
  <field name="_root_" type="string" indexed="true" stored="false" docValues="false"/>
  <field name="_text_" type="text_general" indexed="true" stored="false" multiValued="true"/>
  
  <!-- Dynamic fields -->
  <dynamicField name="*_i" type="pint" indexed="true" stored="true"/>
  <dynamicField name="*_s" type="string" indexed="true" stored="true"/>
  <dynamicField name="*_l" type="plong" indexed="true" stored="true"/>
  <dynamicField name="*_t" type="text_general" indexed="true" stored="true"/>
  <dynamicField name="*_b" type="boolean" indexed="true" stored="true"/>
  <dynamicField name="*_f" type="pfloat" indexed="true" stored="true"/>
  <dynamicField name="*_d" type="pdouble" indexed="true" stored="true"/>
  <dynamicField name="*_dt" type="pdate" indexed="true" stored="true"/>
  
  <!-- Copy fields for full-text search -->
  <copyField source="title" dest="_text_"/>
  <copyField source="content" dest="_text_"/>
  <copyField source="description" dest="_text_"/>
  <copyField source="username" dest="_text_"/>
  <copyField source="filetext" dest="_text_"/>
  {% if schema_version | float >= 4.1 %}
  <copyField source="intro" dest="_text_"/>
  {% endif %}
  {% if schema_version | float >= 5.0 %}
  <copyField source="competencies" dest="_text_"/>
  <copyField source="outcomes" dest="_text_"/>
  {% endif %}
  
  <uniqueKey>id</uniqueKey>
</schema>
